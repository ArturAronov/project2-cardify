<%- contentFor('styles') %>
<%- contentFor('scripts') %>
<script>
  const generateForm = ({ user, errors } = {}) => {
    return `
      <div class="container w-75 pt-5">
        <h3 class="text-center">
          Sign Up
        </h3>
        <form id="signup-form">
           <label
            for="name-signup"
            class="form-label m-0 pt-3"
            >
              Name
            </label>
          <input
            type="text"
            id="name-signup"
            class="form-control ${errors?.name && 'is-invalid'}"
            name="name"
            value="${user?.name || ''}"
            aria-describedby="inputGroup-sizing-default"
          >
          <div class="invalid-feedback">${errors?.name || ''}</div>
          <label
            for="email-signup"
            class="form-label m-0 pt-3"
            >
              Email
            </label>
          <input
            type="email"
            id="email-signup"
            class="form-control ${errors?.email && 'is-invalid'}"
            name="email"
            value="${user?.email || ''}"
            aria-describedby="inputGroup-sizing-default"
          >
          <div class="invalid-feedback">${errors?.email || ''}</div>
          <label
            for="password-signup"
            class="form-label m-0 pt-3"
          >
            Password
          </label>
          <input
            type="password"
            id="password-signup"
            class="form-control ${errors?.password && 'is-invalid'}"
            class="form-control"
            name="password"
            value="${user?.password || ''}"
            aria-describedby="inputGroup-sizing-default"
          >
          <div class="invalid-feedback">${errors?.password || ''}</div>
          <label
            for="password-signup"
            class="form-label m-0 pt-3"
          >
            Confirm Password
          </label>
          <input
            type="password"
            id="confirm-password-signup"
            class="form-control ${errors?.passwordConfirmation && 'is-invalid'}"
            class="form-control"
            name="passwordConfirmation"
            value="${user?.passwordConfirmation || ''}"
            aria-describedby="inputGroup-sizing-default"
          >
          <div class="invalid-feedback">${errors?.passwordConfirmation || ''}</div>
          <div class="row justify-content-center">
            <button class="btn btn-primary m-2" type="submit" style='width: 100px'>Submit</button>
          </div>
        </form>
      </div>
    `
  }

  const handleSignup = e => {
    e.preventDefault()
    const data = new FormData(e.target)
    $('#signup-form button[type="submit"]').attr('disabled', true)
    axios({
      method: 'POST',
      url: '/api/auth/signup',
      data
    }).then(() => {
      window.location.href = `/my/collections`
    }).catch((err) => {
      generatePage({
        user: parseFormData(data),
        errors: err.response.data
      })
    })
  }

  const generatePage = info => {
    const $page = $('#pages-auth-signup')
    const $form = generateForm(info)
    $page.html('').append($form)
  }

  $(document).ready(() => {
    generatePage()
    $('#pages-auth-signup').on('submit', '#signup-form', handleSignup)
  })
</script>
<%- contentFor('body') %>
<div id="pages-auth-signup" class="container"></div>
