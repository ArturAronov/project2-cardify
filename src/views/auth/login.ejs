<%- contentFor('styles') %>
<%- contentFor('scripts') %>
<script>
  const generateForm = ({user, errors} = {}) => {
    return `
      <div class="container w-75">
        <div id='welcome-title' class='text-center'>
          <h1>
            Welcome
          </h1>
          <h1>
            to
          </h1>
          <h1>
            Cardify
          </h1>
        </div>
        <form id="login-form">
          <label
            for="email-login"
            class="form-label m-0 pt-3"
            >
              Email
            </label>
          <input
            type="email"
            id="email-login"
            class="form-control ${errors?.email && 'is-invalid'}"
            name="email"
            value="${user?.email || ''}"
            aria-describedby="inputGroup-sizing-default"
          >
          <div class="invalid-feedback">${errors?.email || ''}</div>
          <label
            for="password-login"
            class="form-label m-0 pt-3"
          >
            Password
          </label>
          <input
            type="password"
            id="password-login"
            class="form-control ${errors?.password && 'is-invalid'}"
            class="form-control"
            name="password"
            value="${user?.password || ''}"
            aria-describedby="inputGroup-sizing-default"
          >
          <div class="invalid-feedback">${errors?.password || ''}</div>
          <div class="row justify-content-center">
            <button type="button" class="btn btn-outline-info m-2" style='width: 100px'>Signup</button>
           <button class="btn btn-primary m-2" type="submit" style='width: 100px'>Login</button>
          </div>
        </form>
      </div>
    `
  }

  const handleLogin = (e) => {
    e.preventDefault()
    const data = new FormData(e.target)
    console.log(data)
    $('#login-form button[type="submit"]').attr('disabled', true)
    axios({
      method: 'POST',
      url: '/api/auth/login',
      data
    }).then(() => {
      window.location.href = `/my/collections`
    }).catch((err) => {
      generatePage({
        user: parseFormData(data),
        errors: err.response.data
      })
    })
  }

  const generatePage = (info) => {
    const $page = $('#pages-auth-login')
    const $form = generateForm(info)
    $page.html('').append($form)
  }

  $(document).ready(() => {
    generatePage()
    $('#pages-auth-login').on('submit', '#login-form', handleLogin)
  })
</script>
<%- contentFor('body') %>
<div id="pages-auth-login" class="container"></div>
