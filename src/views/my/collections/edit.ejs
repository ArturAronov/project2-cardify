<%- contentFor('styles') %>
<%- contentFor('scripts') %>
<script>
  const generateForm = ({ user, errors } = {}) => {
      return `
          <div class="container w-75 pt-5">
            <h3 class="text-center">
              New Collection
            </h3>
            <form id="new-collection-form">
              <label
                for="name-collection"
                class="form-label m-0 pt-3"
                >
                  Collection Name (required)
                </label>
              <input
                type="text"
                id="name-collection"
                class="form-control ${errors?.title && 'is-invalid'}"
                name="title"
                value="${user?.title || ''}"
                aria-describedby="inputGroup-sizing-default"
              >
              <div class="invalid-feedback">${errors?.title || ''}</div>

              <label
                for="name-collection"
                class="form-label m-0 pt-3"
                >
                  Description
                </label>
              <textarea
                class="form-control" id="name-collection"
                name="description"
                rows="2">
                </textarea>
              <div class="invalid-feedback">${errors?.description || ''}</div>

              <div class="row justify-content-center">
                <button class="btn btn-primary m-2" type="submit" style='width: 100px'>Submit</button>
              </div>
            </form>
          </div>
        `
    }
</script>
<%- contentFor('body') %>
<div id="pages-auth-login" class="container">Edit Collection</div>
