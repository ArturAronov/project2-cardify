<%- contentFor('styles') %>
<%- contentFor('scripts') %>
<script>
  const generateEdit = ({user, errors} = {}) => {
    const $form = $(`
      <div class="container w-75 pt-5">
        <h3 class="text-center">
          Edit Profile
        </h3>
        <form id="profile-edit-form">
           <label
            for="name-signup"
            class="form-label m-0 pt-3"
            >
              Name
            </label>
          <input
            type="text"
            id="name-signup"
            class="form-control ${errors?.name && 'is-invalid'}"
            name="name"
            value="${user?.name || ''}"
            aria-describedby="inputGroup-sizing-default"
          >
          <div class="invalid-feedback">${errors?.name}</div>
          <label
            for="email-signup"
            class="form-label m-0 pt-3"
            >
              Email
            </label>
          <input
            type="email"
            id="email-signup"
            class="form-control ${errors?.email && 'is-invalid'}"
            name="email"
            value="${user?.email || ''}"
            aria-describedby="inputGroup-sizing-default"
          >
          <div class="invalid-feedback">${errors?.email || ''}</div>
          <label
            for="password-signup"
            class="form-label m-0 pt-3"
          >
            Password
          </label>
          <input
            type="password"
            id="password-signup"
            class="form-control ${errors?.password && 'is-invalid'}"
            class="form-control"
            name="password"

            aria-describedby="inputGroup-sizing-default"
          >
          <div class="invalid-feedback">${errors?.password || ''}</div>
          <label
            for="password-signup"
            class="form-label m-0 pt-3"
          >
            Confirm Password
          </label>
          <input
            type="password"
            id="confirm-password-signup"
            class="form-control ${errors?.passwordConfirmation && 'is-invalid'}"
            name="passwordConfirmation"

            aria-describedby="inputGroup-sizing-default"
          >
          <div class="invalid-feedback">${errors?.passwordConfirmation || ''}</div>

          <label
            for="user-avatar"
            class="form-label m-0 pt-3"
          >
            Avatar
          </label>
          <input
            type="file"
            id="user-avatar"
            class="form-control"
            name="avatar"
          ></input>
          <div class="invalid-feedback">${errors?.avatar || ''}</div>

          <div class="row justify-content-center">
            <button class="btn btn-primary m-2" type="submit" style='width: 100px'>Submit</button>
          </div>
        </form>
      </div>
    `)

    if (user?.avatar?.constructor?.name === 'File') {
      const $avatar = $('#user-avatar').attr('class', `form-control ${errors?.avatar && 'is-invalid'}`)
      $form.find('#user-avatar').replaceWith($avatar)
    }

    return $form

  }

  const submitEdit = e => {
    e.preventDefault()
    const data = new FormData(e.target)
    axios({
      method: 'PUT',
      url: '/api/my/profile/edit',
      data
    }).then(() => {
      window.location.href = '/my/profile'
    }).catch(err => {
      generatePage({
        user: parseFormData(data),
        errors: err.response.data
      })
    })
  }

  const generatePage = info => {
    const $page = $('#pages-my-profile-edit')
    const $editPage = generateEdit(info)
    $page.html('').append($editPage)
  }

  $(document).ready(() => {
    generatePage()
    $('#pages-my-profile-edit').on('submit', '#profile-edit-form', submitEdit)
  })


</script>
<%- contentFor('body') %>
<div id="pages-my-profile-edit" class="container"></div>
